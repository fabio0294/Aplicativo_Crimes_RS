<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TituloAberturaOcorrencia"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/BoletimNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:contentDescription="@string/BoletimNome"
            android:ems="10"
            android:hint="@string/BoletimNome"
            android:imeActionLabel="@string/BoletimNome"
            android:inputType="textPersonName"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/BoletimCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:contentDescription="@string/BoletimCpf"
            android:ems="10"
            android:hint="@string/BoletimCpf"
            android:imeActionLabel="@string/BoletimCpf"
            android:inputType="textPersonName"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/BoletimDataNascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:contentDescription="@string/BoletimDataNasc"
            android:ems="10"
            android:hint="@string/BoletimDataNasc"
            android:imeActionLabel="@string/BoletimDataNasc"
            android:inputType="date"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/BoletimAssunto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:contentDescription="@string/BoletimAssunto"
            android:ems="10"
            android:hint="@string/BoletimAssunto"
            android:imeActionLabel="@string/BoletimAssunto"
            android:inputType="textPersonName"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/BoletimDescricao"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:layout_marginTop="20px"
            android:contentDescription="@string/BoletimDescricaoOcorrencia"
            android:ems="10"
            android:hint="@string/BoletimDescricaoOcorrencia"
            android:imeActionLabel="@string/BoletimDescricaoOcorrencia"
            android:inputType="textPersonName"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/BoletimDataOcorrido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:contentDescription="@string/BoletimDataOcorrencia"
            android:ems="10"
            android:hint="@string/BoletimDataOcorrencia"
            android:imeActionLabel="@string/BoletimDataOcorrencia"
            android:inputType="date"
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:background="@drawable/side_nav_bar"
            android:backgroundTint="@color/design_default_color_on_secondary"
            android:text="@string/BotaoOcorrencia" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>